<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Two">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Lets Fill out Basic Details"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_below="@+id/linearLayout21"
                    android:rotation="45"
                    android:layout_marginTop="-13dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/square"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:layout_below="@id/imageView2"
                    android:id="@+id/your_name_basic_signup"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Your Name"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/your_name_basic_signup"
                    android:id="@+id/relativeLayout21"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:text="FN"
                        android:textColor="@color/white"
                        android:id="@+id/textview_first_name"
                        android:background="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textview_first_name"
                        android:layout_alignBottom="@+id/textview_first_name"
                        android:hint="First Name"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:background="@color/editText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/relativeLayout21"
                    android:id="@+id/relativeLayout22"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:text="LN"
                        android:textColor="@color/white"
                        android:id="@+id/textview_last_name"
                        android:background="@color/colorPrimary"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textview_last_name"
                        android:layout_alignBottom="@+id/textview_last_name"
                        android:hint="Last Name"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:background="@color/editText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@id/relativeLayout22"
                    android:id="@+id/your_date_ob_signup"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Your Date Of Birth"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/your_date_ob_signup"
                    android:id="@+id/relativeLayout23"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/date_OB_Button"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:background="@color/colorPrimary"
                        android:text="Click To Select"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Date"
                        android:id="@+id/date_show_text_signup"
                        android:layout_marginTop="2dp"
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/date_OB_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="13dp"
                    android:id="@+id/relativeLayout24"
                    android:layout_below="@+id/relativeLayout23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Religion"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout25"
                    android:layout_below="@+id/relativeLayout24"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgView_CreatingFor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_islam_hd_png_islam_png_hd_450" />

                    <Spinner
                        android:id="@+id/religion_spinner_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:textColor="#6e6e6e"
                        android:background="#DADADA"
                        android:layout_toRightOf="@id/imgView_CreatingFor"
                        android:popupBackground="#DADADA"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/relativeLayout26"
                    android:layout_below="@+id/relativeLayout25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Mother Tongue"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout27"
                    android:layout_below="@+id/relativeLayout26"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgView_motherTongue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_chat_bubble_black_24dp" />

                    <Spinner
                        android:id="@+id/motherTongue_spinner_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:textColor="#6e6e6e"
                        android:background="#DADADA"
                        android:layout_toRightOf="@id/imgView_motherTongue"
                        android:popupBackground="#DADADA"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/relativeLayout28"
                    android:layout_below="@+id/relativeLayout27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Where Do You Live?"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout29"
                    android:layout_below="@+id/relativeLayout28"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgView_country"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_location_on_black_24dp" />

                    <Spinner
                        android:id="@+id/country_spinner_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="15sp"
                        android:textColor="#6e6e6e"
                        android:background="#DADADA"
                        android:layout_toRightOf="@id/imgView_country"
                        android:popupBackground="#DADADA"

                        />

                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout30"
                android:layout_below="@+id/relativeLayout29"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="12dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/signUp_btn_final"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="By Signing up, you agree to our Terms"
                    android:id="@+id/terms_text_signup"
                    android:layout_marginTop="2dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/signUp_btn_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </ScrollView>

</RelativeLayout>